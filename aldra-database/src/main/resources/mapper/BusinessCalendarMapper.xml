<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.s_kugel.aldra.database.repository.BusinessCalendarMapper">
    <select
        id="findCurrentBusinessDate"
        resultType="com.s_kugel.aldra.database.entity.gen.BusinessCalendar"
    >
        SELECT bc.*
        FROM business_calendar AS bc
        JOIN application_date AS ad
          ON bc.basis_date = ad.basis_date
        LIMIT 1
    </select>
</mapper>
